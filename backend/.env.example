# NoteMind Environment Variables
# Create a .env file in the backend directory with these variables

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/notemind
# or use MongoDB Atlas: mongodb+srv://<username>:<password>@cluster0.mongodb.net/notemind

# JWT Secret for authentication tokens
JWT_SECRET=your_jwt_secret_key_here

# API Key for Gemini (Replace with your key from https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# Port for the server to run on
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# Token expiration time (in days)
JWT_EXPIRE=30